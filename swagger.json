{
  "openapi": "3.0.1",
  "info": {
    "title": "Task Manager API",
    "description": "An API for Task Manager",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Localhost server"
    }
  ],
  "paths": {
    "/api/v1/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Login successful"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Login failed because of wrong email or password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Wrong email or password"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not a valid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Not a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "Signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Signup successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Signup successful"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not a valid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Not a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/products": {
      "get": {
        "tags": ["products"],
        "summary": "Get all products",
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/products/{id}": {
      "get": {
        "tags": ["products"],
        "summary": "Get one product",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Get product successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      },
      "post": {
        "tags": ["products"],
        "summary": "Create product",
        "requestBody": {
          "description": "Product info",
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create product successful"
          },
          "401": {
            "description": "UNAUTHORIZED",
            "content": {
              "application/json": {
                "example": { "message": "UNAUTHORIZED" }
              }
            }
          }
        }
      }
    },
    "/api/v1/cart": {
      "get": {
        "tags": ["cart"],
        "summary": "Get user cart",
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Have not login"
          }
        }
      },
      "post": {
        "tags": ["cart"],
        "summary": "Add to cart",
        "requestBody": {
          "description": "Send product info and quantity",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product": {
                    "type": "object"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Add to cart successful"
          }
        }
      },
      "put": {
        "tags": ["cart"],
        "summary": "Edit product cart",
        "requestBody": {
          "description": "Send product info and quantity",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product": {
                    "type": "object"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Edit to cart successful"
          }
        }
      },
      "delete": {
        "tags": ["cart"],
        "summary": "Delete product in cart",
        "requestBody": {
          "description": "Send product info",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Delete product successful"
          }
        }
      }
    },
    "/api/v1/order": {
      "get": {
        "tags": ["orders"],
        "summary": "Get orders list",
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "products": {
                          "type": "object"
                        },
                        "quantity": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["orders"],
        "summary": "Add cart to orders lists",
        "responses": {
          "201": {
            "description": "Add to cart successful"
          },
          "401": {
            "description": "User have not logged in"
          }
        }
      }
    }
  }
}
