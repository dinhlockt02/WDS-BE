{
  "openapi": "3.0.1",
  "info": {
    "title": "WDS Training API",
    "description": "An API for WDS Training Test",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Localhost server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/v1/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Login successful"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Login failed because of wrong email or password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Wrong email or password"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not a valid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Not a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "Signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Nguyen Van A"
                  },
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Signup successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Signup successful"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not a valid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Not a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/books": {
      "get": {
        "tags": ["books"],
        "summary": "Get all books",
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string",
                            "example": "61eab6ebaa5731d9327fa0ca"
                          },
                          "isbn": {
                            "type": "string",
                            "example": "9781491943533"
                          },
                          "title": {
                            "type": "string",
                            "example": "This is the title"
                          },
                          "author": {
                            "type": "string",
                            "example": "T D L"
                          },
                          "published": {
                            "type": "string",
                            "example": "2020"
                          },
                          "publisher": {
                            "type": "string",
                            "example": "NXB DHQG HCM"
                          },
                          "page": {
                            "type": "number",
                            "example": 345
                          },
                          "imageUrl": {
                            "type": "string",
                            "example": "http://example.com/example.jpg"
                          },
                          "description": {
                            "type": "string",
                            "example": "This is a very awesome books"
                          },
                          "price": {
                            "type": "number",
                            "example": "9.99"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create book (admin only)",
        "tags": ["books"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "isbn": {
                    "type": "string",
                    "example": "9781491943533"
                  },
                  "title": {
                    "type": "string",
                    "example": "This is the title"
                  },
                  "author": {
                    "type": "string",
                    "example": "T D L"
                  },
                  "published": {
                    "type": "string",
                    "example": "2020"
                  },
                  "publisher": {
                    "type": "string",
                    "example": "NXB DHQG HCM"
                  },
                  "page": {
                    "type": "number",
                    "example": 345
                  },
                  "imageUrl": {
                    "type": "string",
                    "example": "http://example.com/example.jpg"
                  },
                  "description": {
                    "type": "string",
                    "example": "This is a very awesome books"
                  },
                  "price": {
                    "type": "number",
                    "example": "9.99"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create books successful"
          },
          "401": {
            "description": "Unauthorize"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/v1/books/{id}": {
      "get": {
        "tags": ["books"],
        "summary": "Get one product",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Get product successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "61eab6ebaa5731d9327fa0ca"
                    },
                    "isbn": {
                      "type": "string",
                      "example": "9781491943533"
                    },
                    "title": {
                      "type": "string",
                      "example": "This is the title"
                    },
                    "author": {
                      "type": "string",
                      "example": "T D L"
                    },
                    "published": {
                      "type": "string",
                      "example": "2020"
                    },
                    "publisher": {
                      "type": "string",
                      "example": "NXB DHQG HCM"
                    },
                    "page": {
                      "type": "number",
                      "example": 345
                    },
                    "imageUrl": {
                      "type": "string",
                      "example": "http://example.com/example.jpg"
                    },
                    "description": {
                      "type": "string",
                      "example": "This is a very awesome books"
                    },
                    "price": {
                      "type": "number",
                      "example": "9.99"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/api/v1/order": {
      "get": {
        "tags": ["orders"],
        "summary": "Get orders list",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "products": {
                          "type": "object"
                        },
                        "quantity": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["orders"],
        "summary": "Add cart to orders lists",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "books": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "bookId": {
                          "type": "string"
                        },
                        "quantity": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Add to cart successful"
          },
          "401": {
            "description": "User have not logged in"
          }
        }
      }
    },
    "/api/v1/image-upload": {
      "post": {
        "tags": ["image"],
        "summary": "Upload image",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Upload successful"
          }
        }
      }
    }
  }
}
