{
  "openapi": "3.0.1",
  "info": {
    "title": "WDS Training API",
    "description": "An API for WDS Training Test",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Localhost server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/v1/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Login successful"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Login failed because of wrong email or password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Wrong email or password"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not a valid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Not a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "Signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Nguyen Van A"
                  },
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Signup successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Signup successful"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not a valid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Not a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/books": {
      "get": {
        "tags": ["books"],
        "summary": "Get all books",
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "example": "This is the title"
                      },
                      "imageUrl": {
                        "type": "string",
                        "example": "http://example.com/example.img"
                      },
                      "author": {
                        "type": "string",
                        "example": "Nguyen Van An"
                      },
                      "description": {
                        "type": "string",
                        "example": "This is a very awesome books"
                      },
                      "price": {
                        "type": "number",
                        "example": "9.99"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/books/{id}": {
      "get": {
        "tags": ["books"],
        "summary": "Get one product",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Get product successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "example": "This is the title"
                    },
                    "imageUrl": {
                      "type": "string",
                      "example": "http://example.com/example.img"
                    },
                    "author": {
                      "type": "string",
                      "example": "Nguyen Van An"
                    },
                    "description": {
                      "type": "string",
                      "example": "This is a very awesome books"
                    },
                    "price": {
                      "type": "number",
                      "example": "9.99"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/api/v1/cart": {
      "get": {
        "tags": ["cart"],
        "summary": "Get user cart",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "product": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "example": "This is the title"
                          },
                          "imageUrl": {
                            "type": "string",
                            "example": "http://example.com/example.img"
                          },
                          "description": {
                            "type": "string",
                            "example": "This is a very awesome product"
                          },
                          "price": {
                            "type": "number",
                            "example": "9.99"
                          }
                        }
                      },
                      "quantity": {
                        "type": "number",
                        "example": "3"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Have not login"
          }
        }
      },
      "post": {
        "tags": ["cart"],
        "summary": "Add to cart",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Send product info and quantity",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "product": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string",
                          "example": "This is the title"
                        },
                        "imageUrl": {
                          "type": "string",
                          "example": "http://example.com/example.img"
                        },
                        "description": {
                          "type": "string",
                          "example": "This is a very awesome product"
                        },
                        "price": {
                          "type": "number",
                          "example": "9.99"
                        }
                      }
                    },
                    "quantity": {
                      "type": "number",
                      "example": "3"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Add to cart successful"
          }
        }
      },
      "put": {
        "tags": ["cart"],
        "summary": "Edit product cart",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Send product info and quantity",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "product": {
                          "type": "object",
                          "properties": {
                            "title": {
                              "type": "string",
                              "example": "This is the title"
                            },
                            "imageUrl": {
                              "type": "string",
                              "example": "http://example.com/example.img"
                            },
                            "description": {
                              "type": "string",
                              "example": "This is a very awesome product"
                            },
                            "price": {
                              "type": "number",
                              "example": "9.99"
                            }
                          }
                        },
                        "quantity": {
                          "type": "number",
                          "example": "3"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Edit to cart successful"
          }
        }
      }
    },
    "/api/v1/order": {
      "get": {
        "tags": ["orders"],
        "summary": "Get orders list",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "products": {
                          "type": "object"
                        },
                        "quantity": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["orders"],
        "summary": "Add cart to orders lists",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Add to cart successful"
          },
          "401": {
            "description": "User have not logged in"
          }
        }
      }
    },
    "/api/v1/image-upload": {
      "post": {
        "tags": ["image"],
        "summary": "Upload image",
        "requestBody": {
          "content": {
            "image/png": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/jpg": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/jpeg": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Upload successful"
          }
        }
      }
    }
  }
}
